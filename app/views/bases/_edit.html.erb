<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal"><span>×</span></button>
      <h4 class="modal-title">【拠点情報の変更】</h4>
    </div>
    <div class="modal-body">
      <%= form_with(model: @base, url: basis_path(@base), local: true, method: :patch) do |f| %>
          
        <%= f.label t(".base_number") %>
        <%= f.number_field :base_number, class: 'form-control' %>
          
        <%= f.label t(".base_name") %>
        <%= f.text_field :base_name, class: 'form-control' %>
          
        <%= f.label t(".base_category") %>
        <%= f.text_field :base_category, class: 'form-control' %>
          
        <%= f.submit "更新", class: "btn btn-primary" %>
        
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">閉じる</button>
    </div>
  </div>
</div>